<?xml version="1.0" encoding="UTF-8"?>
<install version="4.0" type="plugin" group="payment">
	<name>os_electroneum</name>
	<title>Electroneum Payment for Joom Donation</title>
    <creationDate>Nov 2018</creationDate>
    <author>Claes Norin</author>
    <authorEmail>damdt@joomdonation.com</authorEmail>
    <authorUrl>https://joomlapro.com</authorUrl>
    <copyright>Copyright (C) 2004 - 2018 joomlapro.com All rights reserved.</copyright>
    <version>1.0</version>
	<description>Electroneum Payment for Joom Donation</description>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/components/com_jdonation/payments/electroneum/fields">
				<field type="donate" name="donate" />
                <field type="text" name="apikey" default="" class="input-large" size="55" label="API Key" description="API Key"/>
				<field type="text" name="secret" default="" class="input-large" size="55" label="API Secret" description="API Secret"/>
				<field type="text" name="outlet" default="" class="input-large" size="55" label="Outlet ID" description="Vendor Id"/>
			</fieldset>	
		</fields>
	</config>
	<files>
		<filename>os_electroneum.php</filename>				
		<folder>electroneum</folder>				
	</files>	
</install>